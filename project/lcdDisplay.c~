#include <msp430.h>
#include "switches.h"
#include "led.h"
#include "buzzer.h"
#include "stateMachineAssembly.h"
#include "lcdutils.h"
#include "lcddraw.h"

void drawTriangle(int color){
    int j;
  for (j=0; j<80; j++){
    int row = j;
    for (int col=j; col < screenWidth - j; col++)
      drawPixel(col, row, color);	      
  }
 

void triangleShow() {
  int color = 0xFFFF;
  for(int i = 0; i < 100; i++){
    triangle(color);
    color = color << 1;
  }
