	.arch msp430g2553

	.p2align 1,0
	.data
state:	.byte 0

	.text
curr:
	.word note1
	.word note2
	.word note3
	.word note4
	.word note5

	.global randomBuzz
randomBuzz:

	mov #4, r12
	cmp.b &state, r12
	jl default

	mov.b &state, r12
	add r12, r12
	mov curr(r12), r0

	
note1:	mov #2000, r12
	call #buzzer_set_period
	mov.b #2, &state
	jmp end

note2:	mov #1500, r12
	call #buzzer_set_period
	mov.b #3, &state
	jmp end

note3:	mov #2200, r12
	call #buzzer_set_period
	mov.b #4, &state
	jmp end

note4:	mov #800, r12
	call #buzzer_set_period
	mov.b #5, &state
	jmp end

note5:	mov #400, r12
	call #buzzer_set_period
	mov.b #6, &state
	jmp end

default:mov #0, r12
	call #buzzer_set_period

end:
	ret
